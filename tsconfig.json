{
  "compilerOptions": {
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "lib":["dom", "es2017", "esnext.asynciterable"],
    "sourceMap": true,
    "outDir": "./build",
    "noImplicitAny": false,
    "watch": false,
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["*", "*.json"]
    },
    "types": [
      "react",
      "react-native"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
